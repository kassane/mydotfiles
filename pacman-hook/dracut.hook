[Trigger]
Operation = Upgrade
Type = Package
Target = linux

[Action]
Description = regenerate initrd after kernel build
Depends = dracut
When = PostTransaction
Exec = /usr/bin/bash -c "dracut -H --hostonly -f /boot/initramfs-linux.img --kver $(pacman -Ql linux|grep /usr/lib/modules|grep vmlinuz| cut -d '/' -f 5)"
